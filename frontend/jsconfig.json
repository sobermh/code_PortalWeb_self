{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false, // 关闭 JavaScript 的类型检查
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "typeAcquisition": {
    "enable": false // 禁用自动类型获取
  }
}
